{
  "info": {
    "name": "Laravel Test Booking API",
    "description": "Event Booking System API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/register",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\",\n    \"phone\": \"1234567890\",\n    \"role\": \"customer\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"lizzie18@example.com\",\n    \"password\": \"password\"\n}"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/logout",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/me",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Events (Public)",
      "item": [
        {
          "name": "List Events",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/events?search=&date=&location=",
              "host": ["{{baseUrl}}"],
              "path": ["events"],
              "query": [
                {"key": "search", "value": ""},
                {"key": "date", "value": ""},
                {"key": "location", "value": ""}
              ]
            }
          }
        },
        {
          "name": "Get Event Details",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/events/1",
            "header": []
          }
        }
      ]
    },
    {
      "name": "Events (Protected - Organizer/Admin)",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/events",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Summer Concert\",\n    \"description\": \"A great summer concert event\",\n    \"date\": \"2026-06-15 19:00:00\",\n    \"location\": \"Central Park, NYC\"\n}"
            }
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/events/1",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Summer Concert 2026\",\n    \"description\": \"Updated description\",\n    \"date\": \"2026-06-20 20:00:00\",\n    \"location\": \"Central Park\"\n}"
            }
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/events/1",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Tickets (Protected - Organizer/Admin)",
      "item": [
        {
          "name": "Create Ticket",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/events/1/tickets",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"type\": \"VIP\",\n    \"price\": 150.00,\n    \"quantity\": 100\n}"
            }
          }
        },
        {
          "name": "Update Ticket",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/tickets/1",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"price\": 175.00,\n    \"quantity\": 150\n}"
            }
          }
        },
        {
          "name": "Delete Ticket",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/tickets/1",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Bookings (Protected)",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/tickets/1/bookings",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"quantity\": 2\n}"
            }
          }
        },
        {
          "name": "List User Bookings",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/bookings",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/bookings/1/cancel",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Payments (Protected)",
      "item": [
        {
          "name": "Process Payment",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/bookings/1/payment",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            }
          }
        },
        {
          "name": "Get Payment Details",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/payments/1",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    }
  ]
}
